{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@cqm/shared": ["./packages/shared/src"],
      "@cqm/server": ["./packages/server/src"],
      "@cqm/rag": ["./packages/rag/src"],
      "@cqm/cli": ["./packages/cli/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/tests/**/*",
    "tests/**/*",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts"
  ],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/server" },
    { "path": "./packages/rag" },
    { "path": "./packages/cli" }
  ]
}